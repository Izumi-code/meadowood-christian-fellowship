<!DOCTYPE html>
<html>
<head>
  <title>User Dashboard</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/css/bootstrap.min.css">
  <style>
    /* Custom styles for the side panel */
    .side-panel {
      background-color: #f8f9fa;
      padding: 20px;
    }

    .side-panel ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    .side-panel li {
      margin-bottom: 10px;
    }

    .side-panel a {
      display: block;
      padding: 10px;
      color: #333;
      text-decoration: none;
      transition: background-color 0.3s;
    }

    .side-panel a:hover {
      background-color: #e9ecef;
    }

    /* Custom styles for the navbar */
    .navbar {
      background-color: #f8f9fa;
      padding: 10px 20px;
    }

    .navbar-brand {
      color: #333;
      font-size: 1.5rem;
      font-weight: bold;
      text-decoration: none;
    }

    /* Custom styles for the table */
    .custom-table {
      border: none;
    }

    .custom-table thead {
      background-color: #343a40;
      color: #fff;
    }

    .custom-table th {
      font-weight: bold;
    }

    .custom-table td {
      font-weight: normal;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="col-lg-12 col-md-8">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/userview/userdashboard">User Dashboard</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link" href="/userview/userProfile">Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/userview/churchEvent">Church Events</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/userview/announcements">Announcements</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <h1>Church Events</h1>
    <div class="container mt-5">
          <table class="table table-striped custom-table">
            <thead class="table-dark">
              <tr>
                <th>Title</th>
                <th>Date of the Event</th>
                <th>Time</th>
                <th>Location</th>
                <th>Description</th>
                <th>Created at</th>
              </tr>
            </thead>
            <tbody>
              <% let counter = 1 %>
              <% const filteredEvents = events || [] %>
              <% if (filteredEvents.length > 0) { %>
                <% filteredEvents.forEach(function(event) { %>
                  <tr>
                    <td><%= event.title %></td>
                    <td><%= event.date.toISOString().slice(0, 10) %></td>
                    <td><%= new Date(event.time).toLocaleTimeString() %></td>
                    <td><%= event.location %></td>
                    <td><%= event.description %></td>
                    <td><%= event.createdAt.toISOString().slice(0, 10) %></td>
                  </tr>
                  <% counter++ %>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="6">No events found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>

      <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/js/bootstrap.bundle.min.js"></script>
    </div>
  </div>
</body>
</html>
